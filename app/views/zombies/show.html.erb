<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @zombie.name %>
</p>

<p>
  <strong>Bio:</strong>
  <%= @zombie.bio %>
</p>

<p>
  <strong>Age:</strong>
  <%= @zombie.age %>
</p>

<p>
  <strong>Rotting:</strong>
  <%= @zombie.rotting %>
</p>

<p>
  <strong>Tweets:</strong>
  <% @zombie.tweets.each do |tw| %>
    <%= tw.text %>
  <% end %>
</p>

<p>
  <%= link_to "#{@zombie.name}'s tweets", zombie_tweets_path(@zombie) %>
</p>

<%= link_to 'Edit', edit_zombie_path(@zombie) %> |
